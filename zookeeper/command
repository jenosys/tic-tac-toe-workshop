# zookeeper 
docker run --name some-zookeeper --restart always -d zookeeper

# zookeeper cli
docker run -it --rm --link goofy_lumiere:zookeeper zookeeper zkCli.sh -server zookeeper

# zk-web
docker run --rm -d -p 9090:9090 -v $(pwd)/zk-web-conf.clj:/root/.zk-web-conf.clj gui


# zookeeper standalone
docker run --rm --name zookeeper -e "ZOO_STANDALONE_ENABLED=true" -p 2181:2181 -v $(pwd)/zk-standalone.cfg:/conf/zoo.cfg zookeeper:3.5.5

# zookeeper cli
docker run --rm -it zookeeper:3.5.5 zkCli.sh -server 127.0.0.1:2181
